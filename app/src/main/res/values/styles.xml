<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue_m11</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="m">@color/white</item>
        <item name="drawerBackground">@color/white</item>
        <item name="listBackground">@color/white</item>
        <item name="progressBackgroundColor">@color/transparent</item>
    </style>

    <style name="ButtonControlExo">
        <item name="android:padding">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/ripple_effect</item>
    </style>

    <style name="CustomDialogTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="colorControlNormal">@color/white85</item>
        <item name="colorControlHighlight">@color/white85</item>
    </style>

    <style name="TextStyle"></style>

    <style name="Text.BoldStyle" parent="TextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.14.BoldStyle" parent="Text.BoldStyle">
        <item name="android:textSize">14dp</item>
    </style>
    <style name="Text.18.BoldStyle" parent="Text.BoldStyle">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Text.14.Bold.WhiteStyle" parent="Text.14.BoldStyle">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>