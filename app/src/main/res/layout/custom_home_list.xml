<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_m11"
    android:orientation="horizontal"
    android:visibility="visible">

    <TextView
        android:id="@+id/txt_vlive"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_vlive_120"
        android:ellipsize="marquee"
        android:gravity="center"
        android:padding="10dp"
        android:singleLine="true"
        android:text="V Live"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_instagram"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_instagram_120"
        android:ellipsize="marquee"
        android:gravity="center"
        android:padding="10dp"
        android:singleLine="true"
        android:text="Instagram"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_facebook"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_facebook_120"
        android:ellipsize="marquee"
        android:gravity="center"
        android:padding="10dp"
        android:singleLine="true"
        android:text="Facebook"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_twitter"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_twitter_120"
        android:ellipsize="marquee"
        android:gravity="center"
        android:padding="10dp"
        android:singleLine="true"
        android:text="Live Leak"
        android:textColor="@color/black"
        android:textSize="12sp" />
</LinearLayout>
