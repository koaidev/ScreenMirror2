<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/nav_bar_linear"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="bottom"
        android:elevation="@dimen/_16sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/nav_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:contentDescription="@string/placeholder_todo"
            android:padding="@dimen/_7sdp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <ImageButton
            android:id="@+id/nav_forward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/placeholder_todo"
            android:padding="@dimen/_7sdp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

        <View
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="2" />

        <ImageButton
            android:id="@+id/nav_show_tabs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:contentDescription="@string/placeholder_todo"
            android:padding="@dimen/_7sdp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_tab_black_36dp" />

        <ImageButton
            android:id="@+id/nav_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/placeholder_todo"
            android:padding="@dimen/_7sdp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_history" />

        <ImageButton
            android:id="@+id/nav_add_shortcut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/placeholder_todo"
            android:padding="@dimen/_7sdp"
            android:scaleType="centerInside"
            android:src="@drawable/add_shortcut" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>